{
    "[javascript]": {
        "editor.formatOnSave": false
    },
    "editor.fontFamily": "'Operator Mono', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 16,
    "editor.formatOnSave": true,
    "emmet.includeLanguages": {
        "blade": "html",
        "vue-html": "html",
        "javascript": "javascriptreact"
    },
    "emmet.triggerExpansionOnTab": true,
    "eslint.alwaysShowStatus": true,
    "eslint.autoFixOnSave": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        {
            "language": "vue",
            "autoFix": true
        },
        {
            "language": "vue-html",
            "autoFix": true
        }
    ],
    "explorer.openEditors.visible": 0,
    "explorer.decorations.badges": true,
    "html.format.enable": false,
    "html.format.preserveNewLines": true,
    "javascript.format.enable": false,
    "javascript.validate.enable": false,
    "path-intellisense.mappings": {
        "@": "${workspaceRoot}/frontend/src",
    },
    "prettier.eslintIntegration": false,
    "prettier.requireConfig": true,
    "terminal.integrated.fontFamily": "'Inconsolata for Powerline'",
    "terminal.integrated.fontSize": 18,
    "vetur.completion.useScaffoldSnippets": false,
    "vetur.format.scriptInitialIndent": true,
    "vetur.format.defaultFormatter.html": "js-beautify-html",
    "vetur.format.defaultFormatter.js": "vscode-typescript",
    "vetur.format.defaultFormatter.stylus": "stylus-supremacy",
    "vetur.format.defaultFormatterOptions": {
        "js-beautify-html": {
            // js-beautify-html settings, see https://github.com/vuejs/vetur/blob/master/server/src/modes/template/services/htmlFormat.ts
        }
    },
    "vetur.validation.template": false,
    "workbench.colorTheme": "Cobalt2",
    "workbench.colorCustomizations": {
        "titleBar.activeForeground": "#fff",
        "titleBar.activeBackground": "#9f1037",
        "titleBar.inactiveBackground": "#9f103788"
    }
}
